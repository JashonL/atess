<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="30dp"
    android:paddingStart="26dp"
    android:paddingEnd="26dp"
    tools:background="@color/color_white"
    tools:context="com.growatt.atess.view.ChartTimeSelectLayout">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:background="@drawable/white_background_corner_4_stroke_1"
        android:divider="@drawable/line_divider_2"
        android:orientation="horizontal"
        android:showDividers="middle">

        <TextView
            android:id="@+id/tv_hour"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@color/colorAccent"
            android:gravity="center"
            android:text="@string/hour"
            android:textColor="@color/text_white"
            android:textSize="@dimen/text_small" />

        <TextView
            android:id="@+id/tv_day"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:gravity="center"
            android:text="@string/day"
            android:textColor="@color/text_gray_99"
            android:textSize="@dimen/text_small" />

        <TextView
            android:id="@+id/tv_month"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:gravity="center"
            android:text="@string/month"
            android:textColor="@color/text_gray_99"
            android:textSize="@dimen/text_small" />

        <TextView
            android:id="@+id/tv_year"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:gravity="center"
            android:text="@string/year"
            android:textColor="@color/text_gray_99"
            android:textSize="@dimen/text_small" />

    </LinearLayout>

    <TextView
        android:id="@+id/tv_select_date"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentEnd="true"
        android:background="@drawable/white_background_corner_4_stroke_1"
        android:drawablePadding="10dp"
        android:gravity="center"
        android:paddingStart="6dp"
        android:paddingEnd="6dp"
        android:textColor="@color/text_gray_99"
        android:textSize="@dimen/text_small"
        app:drawableEndCompat="@drawable/ic_down_2"
        tools:text="2019-02-03" />

</RelativeLayout>