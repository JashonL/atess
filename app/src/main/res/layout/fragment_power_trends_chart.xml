<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/color_white"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:paddingTop="16dp"
    android:paddingBottom="16dp"
    tools:context="com.growatt.atess.ui.home.fragment.synopsis.PowerTrendsChartFragment">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/power_trends"
        android:textColor="@color/text_black"
        android:textSize="@dimen/text_subtitle"
        android:textStyle="bold" />

    <View
        android:layout_width="26dp"
        android:layout_height="2dp"
        android:layout_marginTop="4dp"
        android:background="@color/colorAccent" />

    <com.growatt.atess.view.ChartTimeSelectLayout
        android:id="@+id/chart_time_select_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp" />

    <androidx.fragment.app.FragmentContainerView
        android:id="@+id/fragment_chart"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp" />

</LinearLayout>