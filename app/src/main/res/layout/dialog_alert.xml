<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/default_dialog_background"
    android:orientation="vertical"
    android:paddingStart="16dp"
    android:paddingEnd="16dp"
    tools:context="com.growatt.atess.view.dialog.AlertDialog">

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="24dp"
        tools:text="标题"
        android:textSize="@dimen/text_subtitle"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tv_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        tools:text="@string/privacy_dialog_content"
        android:textColor="@color/text_black" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginTop="24dp"
        android:background="@color/color_line" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="8dp"
        android:paddingTop="14dp"
        android:paddingEnd="8dp"
        android:paddingBottom="14dp">

        <Button
            android:id="@+id/bt_gray"
            android:layout_width="106dp"
            android:layout_height="36dp"
            android:background="@drawable/button_gray_background"
            android:gravity="center"
            android:text="@string/confirm"
            android:textColor="@color/text_gray" />

        <Button
            android:id="@+id/bt_red"
            android:layout_width="106dp"
            android:layout_height="36dp"
            android:layout_alignParentEnd="true"
            android:background="@drawable/button_red_background"
            android:gravity="center"
            android:text="@string/cancel"
            android:textColor="@color/text_white" />

    </RelativeLayout>

</LinearLayout>