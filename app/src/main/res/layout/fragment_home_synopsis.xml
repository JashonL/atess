<?xml version="1.0" encoding="utf-8"?>
<layout>

    <data>

        <import type="com.growatt.lib.util.Util" />

        <import type="com.growatt.atess.util.ValueUtil" />

        <variable
            name="total"
            type="com.growatt.atess.model.plant.SynopsisTotalModel" />

    </data>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".ui.home.fragment.HomeSynopsisFragment">

        <com.growatt.atess.view.TitleBarLayout
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:showLeftBackIcon="false"
            app:showRightImage="true"
            app:titleText="@string/synopsis" />

        <com.scwang.smart.refresh.layout.SmartRefreshLayout
            android:id="@+id/srl_refresh"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/color_white"
                        android:orientation="vertical"
                        android:paddingTop="44dp"
                        tools:context="com.growatt.atess.ui.home.fragment.synopsis.HomeSynopsisHeadFragment">

                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="6dp">

                            <LinearLayout
                                android:id="@+id/ll_instrument_panel"
                                android:layout_width="130dp"
                                android:layout_height="130dp"
                                android:layout_marginStart="42dp"
                                android:background="@drawable/ic_instrument_panel"
                                android:gravity="center"
                                android:orientation="vertical"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/today_generate_electricity"
                                    android:textColor="@color/text_gray_99"
                                    android:textSize="@dimen/text_10" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text='@{ValueUtil.INSTANCE.valueFromKWh(total.today).first}'
                                    android:textColor="@color/text_red"
                                    android:textSize="@dimen/text_20"
                                    android:textStyle="bold"
                                    tools:text="66.6" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text='@{ValueUtil.INSTANCE.valueFromKWh(total.today).second}'
                                    android:textColor="@color/text_gray_99"
                                    android:textSize="@dimen/text_10"
                                    tools:text="@string/kwh" />

                            </LinearLayout>

                            <LinearLayout
                                android:id="@+id/ll_storage_battery"
                                android:layout_width="130dp"
                                android:layout_height="130dp"
                                android:layout_marginEnd="42dp"
                                android:background='@{total.soc&lt;=10?@drawable/ic_storage_battery_red:(total.soc&lt;=30?@drawable/ic_storage_battery_orange:@drawable/ic_storage_battery_green)}'
                                android:gravity="center_horizontal"
                                android:orientation="vertical"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintTop_toTopOf="parent"
                                tools:background="@drawable/ic_storage_battery_green">

                                <Space
                                    android:layout_width="wrap_content"
                                    android:layout_height="0dp"
                                    android:layout_weight="56" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/battery_remaining_capacity"
                                    android:textColor="@color/text_gray_99"
                                    android:textSize="@dimen/text_10" />

                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:gravity="bottom"
                                    android:orientation="horizontal">

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text='@{String.valueOf(total.soc)}'
                                        android:textColor="@color/text_0F4006"
                                        android:textSize="@dimen/text_20"
                                        android:textStyle="bold"
                                        tools:text="80" />

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="%"
                                        android:textColor="@color/text_0F4006"
                                        android:textSize="@dimen/text_10"
                                        android:textStyle="bold" />

                                </LinearLayout>


                                <Space
                                    android:layout_width="wrap_content"
                                    android:layout_height="0dp"
                                    android:layout_weight="38" />

                            </LinearLayout>


                            <View
                                android:id="@+id/view_power_bg"
                                android:layout_width="0dp"
                                android:layout_height="0dp"
                                android:layout_marginTop="6dp"
                                android:background="@drawable/ic_background_1"
                                android:orientation="horizontal"
                                app:layout_constraintDimensionRatio="h,375:126"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toBottomOf="@id/ll_instrument_panel" />

                            <TextView
                                android:id="@+id/tv_month_power"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="20dp"
                                android:text="@{@string/slash_format(@string/month_generate_electricity,@string/kwh)}"
                                android:textColor="@color/text_gray_99"
                                android:textSize="@dimen/text_medium"
                                app:layout_constraintBottom_toBottomOf="@id/view_power_bg"
                                app:layout_constraintEnd_toEndOf="@id/ll_instrument_panel"
                                app:layout_constraintStart_toStartOf="@id/ll_instrument_panel"
                                tools:text="今日发电/kWh" />

                            <TextView
                                android:id="@+id/tv_month_power_value"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="6dp"
                                android:text='@{ValueUtil.INSTANCE.valueFromKWh(total.month).first}'
                                android:textColor="@color/text_black"
                                android:textSize="@dimen/text_20"
                                app:layout_constraintBottom_toTopOf="@id/tv_month_power"
                                app:layout_constraintEnd_toEndOf="@id/ll_instrument_panel"
                                app:layout_constraintStart_toStartOf="@id/ll_instrument_panel"
                                tools:text="666.6" />

                            <TextView
                                android:id="@+id/tv_total_power"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="20dp"
                                android:text="@{@string/slash_format(@string/total_generate_electricity,ValueUtil.INSTANCE.valueFromKWh(total.month).second)}"
                                android:textColor="@color/text_gray_99"
                                android:textSize="@dimen/text_medium"
                                app:layout_constraintBottom_toBottomOf="@id/view_power_bg"
                                app:layout_constraintEnd_toEndOf="@id/ll_storage_battery"
                                app:layout_constraintStart_toStartOf="@id/ll_storage_battery"
                                tools:text="累计发电/kWh" />

                            <TextView
                                android:id="@+id/tv_total_power_value"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="6dp"
                                android:text='@{ValueUtil.INSTANCE.valueFromKWh(total.total).first}'
                                android:textColor="@color/text_black"
                                android:textSize="@dimen/text_20"
                                app:layout_constraintBottom_toTopOf="@id/tv_total_power"
                                app:layout_constraintEnd_toEndOf="@id/ll_storage_battery"
                                app:layout_constraintStart_toStartOf="@id/ll_storage_battery"
                                tools:text="6666.6" />

                        </androidx.constraintlayout.widget.ConstraintLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="16dp"
                            android:layout_marginTop="10dp"
                            android:layout_marginEnd="16dp"
                            android:background="@color/color_F6F6F8"
                            android:gravity="center_horizontal"
                            android:orientation="vertical"
                            android:paddingTop="10dp"
                            android:paddingBottom="10dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/load_electricity"
                                android:textColor="@color/text_black"
                                android:textSize="@dimen/text_subtitle"
                                android:textStyle="bold" />

                            <View
                                android:layout_width="26dp"
                                android:layout_height="2dp"
                                android:layout_marginTop="4dp"
                                android:background="@color/colorAccent" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="4dp"
                                android:divider="@drawable/line_divider_2"
                                android:orientation="horizontal"
                                android:paddingTop="10dp"
                                android:paddingBottom="10dp"
                                android:showDividers="middle">

                                <LinearLayout
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:gravity="center_horizontal"
                                    android:orientation="vertical">

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text='@{ValueUtil.INSTANCE.valueFromKWh(total.loadToday).first}'
                                        android:textColor="@color/text_black"
                                        android:textSize="@dimen/text_subtitle"
                                        android:textStyle="bold"
                                        tools:text="66.6" />

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text='@{@string/slash_format(@string/today_use_electricity,ValueUtil.INSTANCE.valueFromKWh(total.loadToday).second)}'
                                        android:textColor="@color/text_gray_99"
                                        android:textSize="@dimen/text_small" />
                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:gravity="center_horizontal"
                                    android:orientation="vertical">

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text='@{ValueUtil.INSTANCE.valueFromKWh(total.loadTotal).first}'
                                        android:textColor="@color/text_black"
                                        android:textSize="@dimen/text_subtitle"
                                        android:textStyle="bold"
                                        tools:text="66.6" />

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="@{@string/slash_format(@string/today_generate_electricity,ValueUtil.INSTANCE.valueFromKWh(total.loadTotal).second)}"
                                        android:textColor="@color/text_gray_99"
                                        android:textSize="@dimen/text_small" />
                                </LinearLayout>

                            </LinearLayout>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="16dp"
                            android:layout_marginTop="10dp"
                            android:layout_marginEnd="16dp"
                            android:background="@color/color_F6F6F8"
                            android:gravity="center_horizontal"
                            android:orientation="vertical"
                            android:paddingTop="10dp"
                            android:paddingBottom="10dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/grid_electricity"
                                android:textColor="@color/text_black"
                                android:textSize="@dimen/text_subtitle"
                                android:textStyle="bold" />

                            <View
                                android:layout_width="26dp"
                                android:layout_height="2dp"
                                android:layout_marginTop="4dp"
                                android:background="@color/colorAccent" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="4dp"
                                android:divider="@drawable/line_divider_2"
                                android:orientation="horizontal"
                                android:paddingTop="10dp"
                                android:paddingBottom="10dp"
                                android:showDividers="middle">

                                <LinearLayout
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:gravity="center_horizontal"
                                    android:orientation="vertical">

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text='@{ValueUtil.INSTANCE.valueFromKWh(total.toGrid).first}'
                                        android:textColor="@color/text_black"
                                        android:textSize="@dimen/text_subtitle"
                                        android:textStyle="bold"
                                        tools:text="66.6" />

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text='@{@string/slash_format(@string/feed_into_the_grid,ValueUtil.INSTANCE.valueFromKWh(total.toGrid).second)}'
                                        android:textColor="@color/text_gray_99"
                                        android:textSize="@dimen/text_small" />
                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:gravity="center_horizontal"
                                    android:orientation="vertical">

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text='@{ValueUtil.INSTANCE.valueFromKWh(total.fromGrid).first}'
                                        android:textColor="@color/text_black"
                                        android:textSize="@dimen/text_subtitle"
                                        android:textStyle="bold"
                                        tools:text="66.6" />

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text='@{@string/slash_format(@string/take_electricity_grid,ValueUtil.INSTANCE.valueFromKWh(total.fromGrid).second)}'
                                        android:textColor="@color/text_gray_99"
                                        android:textSize="@dimen/text_small" />
                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:gravity="center_horizontal"
                                    android:orientation="vertical">

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text='@{ValueUtil.INSTANCE.valueFromKWh(total.gridTotal).first}'
                                        android:textColor="@color/text_black"
                                        android:textSize="@dimen/text_subtitle"
                                        android:textStyle="bold"
                                        tools:text="66.6" />

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text='@{@string/slash_format(@string/grid_total_power,ValueUtil.INSTANCE.valueFromKWh(total.gridTotal).second)}'
                                        android:textColor="@color/text_gray_99"
                                        android:textSize="@dimen/text_small" />
                                </LinearLayout>

                            </LinearLayout>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="16dp"
                            android:layout_marginEnd="16dp"
                            android:orientation="vertical"
                            android:paddingTop="6dp"
                            android:paddingBottom="6dp">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">

                                <LinearLayout
                                    android:id="@+id/ll_total_component_power"
                                    android:layout_width="107dp"
                                    android:layout_height="115dp"
                                    android:gravity="center"
                                    android:orientation="vertical">

                                    <ImageView
                                        android:layout_width="34dp"
                                        android:layout_height="34dp"
                                        android:src="@drawable/ic_home_total_power" />

                                    <LinearLayout
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginTop="6dp"
                                        android:gravity="center_vertical"
                                        android:orientation="horizontal">

                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:text="@{ValueUtil.INSTANCE.valueFromWp(total.nominalPower).first}"
                                            android:textColor="@color/text_red"
                                            android:textSize="@dimen/text_subtitle"
                                            android:textStyle="bold"
                                            tools:text="666.6" />

                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_marginStart="2dp"
                                            android:text="@{ValueUtil.INSTANCE.valueFromWp(total.nominalPower).second}"
                                            android:textColor="@color/text_red_99"
                                            android:textSize="@dimen/text_10"
                                            tools:text="@string/kwp" />

                                    </LinearLayout>

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginTop="2dp"
                                        android:text="@string/total_component_power"
                                        android:textColor="@color/text_gray_99"
                                        android:textSize="@dimen/text_tab" />

                                </LinearLayout>

                                <Space
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1" />

                                <LinearLayout
                                    android:id="@+id/ll_plant_count"
                                    android:layout_width="107dp"
                                    android:layout_height="115dp"
                                    android:gravity="center"
                                    android:orientation="vertical">

                                    <ImageView
                                        android:layout_width="34dp"
                                        android:layout_height="34dp"
                                        android:src="@drawable/ic_home_plant_count" />

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginTop="6dp"
                                        android:text="@{String.valueOf(total.plantNum)}"
                                        android:textColor="@color/text_red"
                                        android:textSize="@dimen/text_subtitle"
                                        android:textStyle="bold"
                                        tools:text="66" />

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginTop="2dp"
                                        android:text="@string/plant_count"
                                        android:textColor="@color/text_gray_99"
                                        android:textSize="@dimen/text_tab" />

                                </LinearLayout>

                                <Space
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1" />

                                <LinearLayout
                                    android:id="@+id/ll_warning_message"
                                    android:layout_width="107dp"
                                    android:layout_height="115dp"
                                    android:gravity="center"
                                    android:orientation="vertical">

                                    <ImageView
                                        android:layout_width="34dp"
                                        android:layout_height="34dp"
                                        android:src="@drawable/ic_home_warning_message" />

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginTop="6dp"
                                        android:text="@{String.valueOf(total.alarmValue)}"
                                        android:textColor="@color/text_red"
                                        android:textSize="@dimen/text_subtitle"
                                        android:textStyle="bold"
                                        tools:text="6" />

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginTop="2dp"
                                        android:text="@string/warning_message"
                                        android:textColor="@color/text_orange"
                                        android:textSize="@dimen/text_tab" />

                                </LinearLayout>

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="10dp"
                                android:orientation="horizontal">

                                <LinearLayout
                                    android:id="@+id/ll_online_device"
                                    android:layout_width="107dp"
                                    android:layout_height="115dp"
                                    android:gravity="center"
                                    android:orientation="vertical">

                                    <ImageView
                                        android:layout_width="34dp"
                                        android:layout_height="34dp"
                                        android:src="@drawable/ic_home_online" />

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginTop="6dp"
                                        android:text="@{String.valueOf(total.onlineDeviceNum)}"
                                        android:textColor="@color/text_green"
                                        android:textSize="@dimen/text_subtitle"
                                        android:textStyle="bold"
                                        tools:text="6" />

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginTop="2dp"
                                        android:text="@string/online_device"
                                        android:textColor="@color/text_gray_99"
                                        android:textSize="@dimen/text_tab" />

                                </LinearLayout>

                                <Space
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1" />

                                <LinearLayout
                                    android:id="@+id/ll_offline_device"
                                    android:layout_width="107dp"
                                    android:layout_height="115dp"
                                    android:gravity="center"
                                    android:orientation="vertical">

                                    <ImageView
                                        android:layout_width="34dp"
                                        android:layout_height="34dp"
                                        android:src="@drawable/ic_home_offline" />

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginTop="6dp"
                                        android:text="@{String.valueOf(total.offlineDeviceNum)}"
                                        android:textColor="@color/text_gray_99"
                                        android:textSize="@dimen/text_subtitle"
                                        android:textStyle="bold"
                                        tools:text="66" />

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginTop="2dp"
                                        android:text="@string/offline_device"
                                        android:textColor="@color/text_gray_99"
                                        android:textSize="@dimen/text_tab" />

                                </LinearLayout>

                                <Space
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1" />

                                <LinearLayout
                                    android:id="@+id/ll_trouble_device"
                                    android:layout_width="107dp"
                                    android:layout_height="115dp"
                                    android:gravity="center"
                                    android:orientation="vertical">

                                    <ImageView
                                        android:layout_width="34dp"
                                        android:layout_height="34dp"
                                        android:src="@drawable/ic_home_trouble_devices" />

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginTop="6dp"
                                        android:text="@{String.valueOf(total.faultDeviceNum)}"
                                        android:textColor="@color/text_orange"
                                        android:textSize="@dimen/text_subtitle"
                                        android:textStyle="bold"
                                        tools:text="6" />

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginTop="2dp"
                                        android:text="@string/trouble_device"
                                        android:textColor="@color/text_orange"
                                        android:textSize="@dimen/text_tab" />

                                </LinearLayout>

                            </LinearLayout>

                        </LinearLayout>

                    </LinearLayout>

                    <androidx.fragment.app.FragmentContainerView
                        android:id="@+id/fragment_power_trends_chart"
                        android:name="com.growatt.atess.ui.home.fragment.synopsis.PowerTrendsChartFragment"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:background="@color/color_white"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:paddingStart="16dp"
                        android:paddingTop="16dp"
                        android:paddingEnd="16dp"
                        android:paddingBottom="16dp">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:orientation="vertical">

                            <ImageView
                                android:layout_width="30dp"
                                android:layout_height="30dp"
                                android:src="@drawable/ic_co2" />

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="4dp"
                                android:gravity="center_vertical"
                                android:orientation="horizontal">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text='@{ValueUtil.INSTANCE.valueFromKG(total.formulaCo2).first}'
