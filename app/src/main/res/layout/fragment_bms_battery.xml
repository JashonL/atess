<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/color_white"
    android:layout_marginTop="10dp"
    android:orientation="vertical"
    tools:context="com.growatt.atess.ui.plant.fragment.device.BmsBatteryFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:paddingTop="2dp"
        android:paddingBottom="2dp">

        <TextView
            android:id="@+id/tv_battery_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:textColor="@color/text_black"
            android:textSize="@dimen/text_subtitle"
            android:textStyle="bold"
            tools:text="电池串" />

        <TextView
            android:id="@+id/tv_see_more"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:padding="10dp"
            android:text="@string/see_more"
            android:textColor="@color/text_gray_99"
            android:textSize="@dimen/text_small"
            app:drawableEndCompat="@drawable/ic_right" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="45dp"
        android:layout_marginEnd="45dp"
        android:layout_marginBottom="16dp"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/ll_child_battery_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv_child_battery_icon_1"
                android:layout_width="84dp"
                android:layout_height="84dp"
                tools:src="@drawable/ic_battery_box" />

            <TextView
                android:id="@+id/tv_child_battery_name_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:textColor="@color/text_black"
                android:textSize="@dimen/text_13"
                android:textStyle="bold"
                tools:text="#1电池箱" />

            <TextView
                android:id="@+id/tv_child_max_vol_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:textColor="@color/text_gray_99"
                android:textSize="@dimen/text_small"
                tools:text="最大电压：220V" />

            <TextView
                android:id="@+id/tv_child_min_vol_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:textColor="@color/text_gray_99"
                android:textSize="@dimen/text_small"
                tools:text="最小电压：220V" />

            <TextView
                android:id="@+id/tv_child_vol_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:textColor="@color/text_gray_99"
                android:textSize="@dimen/text_small"
                tools:text="电压：220V" />
        </LinearLayout>

        <Space
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <LinearLayout
            android:id="@+id/ll_child_battery_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv_child_battery_icon_2"
                android:layout_width="84dp"
                android:layout_height="84dp"
                tools:src="@drawable/ic_battery_box" />

            <TextView
                android:id="@+id/tv_child_battery_name_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:textColor="@color/text_black"
                android:textSize="@dimen/text_13"
                android:textStyle="bold"
                tools:text="#1电池箱" />

            <TextView
                android:id="@+id/tv_child_max_vol_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:textColor="@color/text_gray_99"
                android:textSize="@dimen/text_small"
                tools:text="最大电压：220V" />

            <TextView
                android:id="@+id/tv_child_min_vol_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:textColor="@color/text_gray_99"
                android:textSize="@dimen/text_small"
                tools:text="最小电压：220V" />

            <TextView
                android:id="@+id/tv_child_vol_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:textColor="@color/text_gray_99"
                android:textSize="@dimen/text_small"
                tools:text="电压：220V" />
        </LinearLayout>

    </LinearLayout>

</LinearLayout>