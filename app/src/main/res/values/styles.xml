<resources>
    <!-- Base application theme. -->
    <style name="Theme.App" parent="Theme.AppCompat.Light.NoActionBar">
        <!--标题栏-->
        <item name="colorPrimary">@color/colorPrimary</item>
        <!--状态栏-->
        <item name="colorPrimaryDark">@android:color/transparent</item>
        <!--系统控件：复选框、单选控件选中颜色-->
        <item name="colorAccent">@color/colorAccent</item>
        <!--activity的背景色-->
        <item name="android:windowBackground">@color/color_default_background</item>
        <!--窗体无标题栏-->
        <item name="windowNoTitle">true</item>
        <!--无actionbar-->
        <item name="windowActionBar">false</item>
        <item name="android:overScrollMode">never</item>

        <!--控件的基本属性配置-->
        <item name="android:textViewStyle">@style/AppTextViewStyle</item>
        <item name="editTextStyle">@style/AppEditTextStyle</item>
        <item name="android:buttonStyle">@style/AppButtonStyle</item>
    </style>

    <style name="AppTextViewStyle" parent="Widget.AppCompat.TextView">

        <item name="android:textColor">@color/text_black</item>
        <item name="android:textSize">@dimen/text_medium</item>
        <item name="android:textColorHint">@color/text_gray_bb</item>

    </style>

    <style name="AppEditTextStyle" parent="Widget.AppCompat.EditText">

        <item name="android:background">@android:color/transparent</item>

    </style>

    <style name="AppButtonStyle" parent="Widget.AppCompat.Button.Borderless">

        <item name="android:background">@drawable/button_red_background</item>
        <item name="android:textColor">@color/text_white</item>

    </style>

</resources>